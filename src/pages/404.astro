---
import { fetchData } from "@/lib/fetchData";
import "@/styles/globals.css";
import Image from "astro/components/Image.astro";
import Layout from "@/layouts/Layout.astro";

interface FetchedData {
  generalInfo: {
    logo: {
      url: string;
      alt: string;
      width: number;
      height: number;
    };
    companyInstagramUsername: string;
    companyInstagramLink: string;
  };
}

const data: FetchedData = await fetchData<FetchedData>(`{
  generalInfo {
    logo: logo {
      url
      alt
      width
      height
    }
    companyInstagramUsername
    companyInstagramLink
  }
}`);
---

<Layout>
  <div class="flex flex-col gap-10 justify-center items-center h-full">
    <Image class="max-w-36" src={data.generalInfo.logo.url} alt={data.generalInfo.logo.alt} width={data.generalInfo.logo.width} height={data.generalInfo.logo.height} />
    <h1 class="text-4xl text-center text-balance font-medium">This page does not exist</h1>
    <a class="border border-baseDark px-4 py-2 rounded-sm bg-baseDark text-baseLight hover:bg-baseLight transition-colors hover:text-baseDark" href="/">Return to homepage</a>
  </div>
</Layout>
