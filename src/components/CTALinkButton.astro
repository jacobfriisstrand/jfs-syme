---
import { type HTMLAttributes } from "astro/types";
const { ctaLink, className } = Astro.props;

interface Props extends HTMLAttributes<"a"> {
  ctaLink: string;
  className?: string;
}
---

<a
  class:list={[
    "text-md flex font-semibold border border-baseDark px-10 rounded-full text-baseDark py-4 md:text-lg gap-3 items-center hover:bg-baseDark hover:text-baseLight [&>span]:ease-in [&>span]:transition-color hover:-translate-y-2 ease-in-out duration-300 hover:shadow-2xl",
    className,
  ]}
  href={ctaLink}><slot /></a
>
